<section class="settings">

    <h2>Public Profile</h2>

    <div class="edition row">

        <div class="image col-md-5 d-flex align-items-start">

            <div class="profile-img">

                <img src="{{user.profileImage}}" alt="{{user.username}} profile image">

                <figure>

                    <div class="icon d-flex justify-content-center align-items-center">

                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-upload" fill="currentColor"
                            xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd"
                                d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z" />
                            <path fill-rule="evenodd"
                                d="M7.646 1.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 2.707V11.5a.5.5 0 0 1-1 0V2.707L5.354 4.854a.5.5 0 1 1-.708-.708l3-3z" />
                        </svg>

                    </div>

                </figure>

            </div>

        </div>

        <div class="form col-md-7">

            <form action='/users/{{user.id}}/settings' method="POST">
                <div class='form-group'>

                    <input id='username' type='text' placeholder='Username' name='username' value={{user.username}}>

                </div>

                <div class='email form-group'>

                    <input id='email' type='email' placeholder='Email' name='email' value={{user.email}}>

                </div>

                {{#if errorMessage}}

                <div class="alert alert-danger" role="alert">
                    {{errorMessage}}
                </div>

                {{/if}}

                <button type='submit' class='btn-rounded btn-important'>Submit</button>

                <a href='/users/home' class='btn-rounded btn-red'>Cancel</a>

            </form>

        </div>

    </div>

</section>