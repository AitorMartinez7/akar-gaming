<section class="profile">

    <div class="header row justify-content-between">

        <div class="user-info col-md-6">

            <div class="row">

                <div class="image d-flex justify-content-center">

                    <div>

                        <img src={{matchedUser.profileImage}} alt="profile image of {{matchedUser.username}}">

                        {{#if isOwner}}

                        <a class='settings d-flex justify-content-center align-items-center' href="/users/settings">

                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-gear-fill"
                                fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd"
                                    d="M9.405 1.05c-.413-1.4-2.397-1.4-2.81 0l-.1.34a1.464 1.464 0 0 1-2.105.872l-.31-.17c-1.283-.698-2.686.705-1.987 1.987l.169.311c.446.82.023 1.841-.872 2.105l-.34.1c-1.4.413-1.4 2.397 0 2.81l.34.1a1.464 1.464 0 0 1 .872 2.105l-.17.31c-.698 1.283.705 2.686 1.987 1.987l.311-.169a1.464 1.464 0 0 1 2.105.872l.1.34c.413 1.4 2.397 1.4 2.81 0l.1-.34a1.464 1.464 0 0 1 2.105-.872l.31.17c1.283.698 2.686-.705 1.987-1.987l-.169-.311a1.464 1.464 0 0 1 .872-2.105l.34-.1c1.4-.413 1.4-2.397 0-2.81l-.34-.1a1.464 1.464 0 0 1-.872-2.105l.17-.31c.698-1.283-.705-2.686-1.987-1.987l-.311.169a1.464 1.464 0 0 1-2.105-.872l-.1-.34zM8 10.93a2.929 2.929 0 1 0 0-5.86 2.929 2.929 0 0 0 0 5.858z" />
                            </svg>

                        </a>

                        {{/if}}

                    </div>

                </div>

                <div class="username col">

                    <h2>{{matchedUser.username}}</h2>

                    <p>@{{matchedUser.username}}</p>

                </div>

            </div>

            {{#unless isOwner}}

            <div class='btn-container'>

                <button class='follow-btn btn-rounded btn-important' value={{matchedUser.id}}>

                    {{#if isFollowing}}

                    unfollow

                    {{else}}

                    follow

                    {{/if}}

                </button>

            </div>

            {{/unless}}

        </div>

        <div class="social col-md-6">

            <div class="row justify-content-around justify-content-md-end align-items-end">

                <a class="played d-flex flex-column justify-content-center align-items-center" href='#'>
                    <h2>0</h2>
                    <p>Played</p>
                </a>

                <a class="followers d-flex flex-column justify-content-center align-items-center" href='#'>
                    <h2 id='followers-text'>{{followers}}</h2>
                    <p>Followers</p>
                </a>

                <a class="following d-flex flex-column justify-content-center align-items-center" href='#'>
                    <h2>{{matchedUser.following.length}}</h2>
                    <p>Following</p>
                </a>

            </div>

        </div>

    </div>

    <div class="body row justify-content-between">

        <div class="options col-md-6">

            <a href="#">
                <h2>Activity</h2>
            </a>

            <a href="/users/{{matchedUser.id}}/reviews">
                <h2>Reviews</h2>
            </a>

            <a href="#">
                <h2>Lists</h2>
            </a>

        </div>

        <div class="col-md-6 d-flex justify-content-end order-first order-md-last">

            <div class='collection'>

                <h2>Collection</h2>

                <div class="buttons row">

                    <a class="col d-flex align-items-end" href='/users/collection/wantToPlay'>
                        <h3>Want to Play</h3>
                    </a>
                    <a class="col d-flex align-items-end" href='/users/collection/playing'>
                        <h3>Playing</h3>
                    </a>
                    <a class="col d-flex align-items-end" href='/users/collection/beaten'>
                        <h3>Beaten</h3>
                    </a>
                    <a class="col d-flex align-items-end" href='/users/collection/completed'>
                        <h3>Completed</h3>
                    </a>
                    <a class="col d-flex align-items-end" href='/users/collection/shelved'>
                        <h3>Shelved</h3>
                    </a>
                    <a class="col d-flex align-items-end" href='/users/collection/abandoned'>
                        <h3>Abandoned</h3>
                    </a>

                </div>

            </div>

        </div>

    </div>

</section>

<script src="https://unpkg.com/axios/dist/axios.min.js"></script>

<script src="/javascripts/follow.js"></script>