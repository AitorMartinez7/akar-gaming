<div class="container">

    <div class="row">

        <div class="col-md-6">
            <h1 style="font-weight: 100">New Company</h1>
        </div>

        <div class="col-md-6">

            <form action="/events/new" method="post">
                <div class="form-group">
                    <label for="name-input">Name</label>
                    <input name="name" type="text" class="form-control" id="name-input" value="{{name}}">
                </div>

                <div class="form-group">
                    <label for="date-input">Date</label>
                    <input name="date" type="date" class="form-control" id="date-input" value="{{date}}">
                </div>

                <div class="form-group">
                    <label for="description-input">Description</label>
                    <input name="description" type="text" class="form-control" id="description-input" value="{{description}}">
                </div>

                <div class="form-group">
                    <label for="type">Latitude: </label><br>
                    <input name="latitude" type="number" placeholder="latitude" value="{{location.coordinates.[0]}}"><br><br>
                </div>

                <div class="form-group">
                    <label for="type">Longitude: </label><br>
                    <input name="longitude" type="number" placeholder="longitude" value="{{location.coordinates.[1]}}"><br><br>
                </div>

                <button type="submit" class="btn btn-dark">Edit</button>
            </form>
        </div>

    </div>
</div>