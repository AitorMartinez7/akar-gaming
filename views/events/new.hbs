<section class="create-event">

    <div class="container">

        <div class="row">

            <div class="col-md-6">
                <h1 style="font-weight: 100">New Event</h1>
            </div>

            <div class="col-md-6">

                <form action="/events/new" method="post">
                    <div class="form-group">
                        <label for="name-input">Name</label>
                        <input name="name" type="text" class="form-control" id="name-input">
                    </div>

                    <div class="form-group">
                        <label for="date-input">Date</label>
                        <input name="date" type="date" class="form-control" id="date-input">
                    </div>

                    <div class="form-group">
                        <label for="description-input">Description</label>
                        <input name="description" type="text" class="form-control" id="description-input">
                    </div>

                    <div class="form-group">
                        <label for="type">Latitude: </label><br>
                        <input name="latitude" type="text" placeholder="latitude"><br><br>
                    </div>

                    <div class="form-group">
                        <label for="type">Longitude: </label><br>
                        <input name="longitude" type="text" placeholder="longitude"><br><br>
                    </div>

                    <button type="submit" class="btn btn-dark">Create</button>
                </form>
            </div>

        </div>
    </div>

</section>