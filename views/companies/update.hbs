<div class="container">

    <div class="row">

        <div class="col-md-6">
            <h1 style="font-weight: 100">Update Company</h1>
        </div>

        <div class="col-md-6">

            <form action="/companies/edit?id={{_id}}" method="post">
                <div class="form-group">
                    <label for="name-input">Name</label>
                    <input name="name" type="text" class="form-control" id="name-input" value="{{name}}">
                </div>

                <div class="form-group">
                    <label for="logo-input">Logo</label>
                    <input name="logo" type="text" class="form-control" id="logo-input" value="{{logo}}">
                </div>

                <div class="form-group">
                    <label for="description-input">Description</label>
                    <input name="description" type="text" class="form-control" id="description-input" value="{{description}}">
                </div>

                <div class="form-group">
                    <label for="website-input">Website</label>
                    <input name="website" type="text" class="form-control" id="website-input" value="{{website}}">
                </div>

                <button type="submit" class="btn btn-dark">Update</button>
            </form>
        </div>

    </div>
</div>