<div class="container">

    <div class="row">

        <div class="col-md-6">
            <h1 style="font-weight: 100">New article</h1>
        </div>

        <div class="col-md-6">

            <form action="/companies/{{company._id}}/newArticle" method="post">
                <div class="form-group">
                    <label for="text-input">Write here:</label>
                    <input name="text" type="text" class="form-control" id="text-input">
                </div>

                <div class="form-group">
                    <input name="creatorId" type="hidden" class="form-control" id="creatorId-input" value="{{user._id}}">
                    <input name="companyId" type="hidden" class="form-control" id="companyId-input" value="{{company._id}}">
                </div>

                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="type-input" value="REVIEW" name='type'>
                    <label class="form-check-label" for="type-input">Review</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="type-input" value="NEWS" name='type'>
                    <label class="form-check-label" for="type-input">News</label>
                </div>
                
                <br><br>

                <button type="submit" class="btn btn-dark">Create</button>
                <a href="/games/{{id}}" class="btn btn-dark">Go Back</a>

            </form>
        </div>

    </div>
</div>