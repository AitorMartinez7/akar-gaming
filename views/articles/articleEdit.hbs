<div class="container">

    <div class="row">

        <div class="col-md-6">
            <h1 style="font-weight: 100">New article</h1>
        </div>

        <div class="col-md-6">

            <form action="/articles/edit?id={{_id}}" method="post">
                <div class="form-group">
                    <label for="text-input">Write here:</label>
                    <input name="text" type="text" class="form-control" id="text-input" value="{{text}}">
                </div>

                <button type="submit" class="btn btn-dark">Edit</button>

            </form>
        </div>

    </div>
</div>